<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <LinearLayout
        android:layout_width="117dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum" />

        <Button
            android:id="@+id/button_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&quot;Next&quot;" />

        <Button
            android:id="@+id/button_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online" />

        <Button
            android:id="@+id/button_gatt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GATT" />

        <Button
            android:id="@+id/button_speedKill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STOP" />

        <Button
            android:id="@+id/button_speedSlower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Slower" />

        <Button
            android:id="@+id/button_speedMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faster" />

        <Button
            android:id="@+id/button_speedReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset" />

        <Button
            android:id="@+id/button_channel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ch 1" />

        <Button
            android:id="@+id/button_channel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ch 2" />

        <Button
            android:id="@+id/button_channel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ch 3" />

        <Button
            android:id="@+id/button_channel4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ch 4" />

        <Button
            android:id="@+id/button_channel5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ch 5" />

        <Button
            android:id="@+id/button_channel6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ch 6" />

        <Button
            android:id="@+id/button_channel7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ch 7" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="115dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_preset0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Black" />

        <Button
            android:id="@+id/button_preset1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preset1" />

        <Button
            android:id="@+id/button_preset2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preset2" />

        <Button
            android:id="@+id/button_preset3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preset3" />

        <Button
            android:id="@+id/button_preset4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preset4" />

