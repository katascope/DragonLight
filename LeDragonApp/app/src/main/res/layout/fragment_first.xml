            android:text="BrMax" />

        <Button
            android:id="@+id/button_sidefx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SideFX" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_paletteRBM"
