        <Button
            android:id="@+id/button_paletteCBM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CBM" />

        <Button
            android:id="@+id/button_paletteLAVA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lava" />

        <Button
            android:id="@+id/button_paletteCLOUD"
            android:layout_width="match_parent"
